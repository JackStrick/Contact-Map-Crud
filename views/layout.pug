    body
        if !hide_login
            if user 
                span
                    span.lead.text-right #{user.first_name + ' ' + user.last_name}  
                    a.btn.btn-secondary(href='/logout') Logout
            else
                span
                    a.btn.btn-primary.signin(href='/login') Sign in
        block content

        
